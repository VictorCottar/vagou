<main>
        <section id="section_top" class="d-flex justify-content-center flex-column align-items-center gap-4 container-fluid">
            <h2 class="fs-1 mb-4">Encontre o emprego dos sonhos!</h2>
            <p class="fs-2 mb-4">Somos o site com mais vagas na <strong>Área Tech.</strong></p>
            <form id="search-form" class="form-inline" action="/" method="GET">
                <div class="input-group mb-5">
                    <input type="text" class="form-control text-center" placeholder="Busque a vaga!" id="job" name="job" autocomplete="off">
                    <button class="btn btn-outline-secondary " id="button_submit" type="submit">Buscar</button>
                  </div>
            </form> 
        </section>
        <section id="title_mid" class="text-center">
          {{#if search}}
            <h3 class="fs-1 ">Buscando vagas que contém: {{search}}</h3>
          {{else}}
          <h3 class="fs-1 ">Vagas Disponíveis</h3>
          {{/if}}
        </section>   
        <section id="jobs_container" class="container d-flex justify-content-center text-center">
          <div class="row gap-4" style="width: 70%;">
            <div class="d-flex flex-column text-center gap-4" >
              {{#each jobs}}
                <ul id="job_list" class="p-4 gap-4">
                  <li id="job_details">
                    <div class="d-flex gap-3 text-center">
                      <img id="image_company" src="/images/company-svgrepo-com.svg" alt="Empresa">
                      <p class="fs-5">{{dataValues.company}}</p>
                    </div>
                    <div class="d-flex flex-column align-items-center gap-2 m-0" >  
                      <h2 class="fs-2">{{dataValues.title}}</h2>
                      <p class="fs-5">R${{dataValues.salary}}</p>
                      <a href="/jobs/details/{{dataValues.id}}" class="fs-5 " id="button_details">Ver vaga</a>
                    </div>
                  </li>
                </ul>
              {{/each}}
            </div>
          </div>
        </section>  
</main>
    